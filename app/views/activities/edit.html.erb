<div class="container">
  <div class="row">
  <% if current_user.admin? %>
  <%= content_tag(:h3, current_user.fullname + " is editing activity for:") %>
  <% end %>
  <%= content_tag(:h1, @user.fullname) %>
</div>
<div class="row">
    <div class="col-md-6">
      <%= simple_form_for [@user, @activity] do |f| %>
        <%= f.input :name, :label => "Experience Name" %>
        <%= f.input :date, :label => "Experience Date" %>
        <%= f.input :hours_worked %>
        <%= f.input :notes %>
        <% if current_user.admin = true %>
          <%= f.input :approved, as: :boolean %>
        <% end %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>