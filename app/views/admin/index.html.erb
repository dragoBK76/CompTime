<div class="container">
  <% if !current_user.admin? %>
    <p>Not an Admin</p>
  <% else %>
  <div class="row">
    <div class="alert alert-success">You're an admin</div>
      <table width="100%" class="table table-striped table-bordered table-responsive">
        <tr>
          <td><strong>Name</strong></td>
          <td><strong>Activity Count</strong></td>
          <td><strong>User ID</strong></td>
          <td><strong>Approved Hours</strong></td>
        </tr>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.fullname %></td>
          <td><%= user.activities.count %></td>
          <td><%= user.id %></td>
          <td><%= user.activities.where(:approved => true).sum(:hours_worked) %> / <%= user.activities.where(approved: true).sum(:hours_worked) / 8 %> days</td>
        </tr>
    <% end %>
      </table>
    </div>
    <div class="row">
      <hr>
    </div>
      <% @users.each do |user| %>
      <div class="row">
        <table class="table table-striped table-bordered table-responsive">
          <tr>
            <td colspan="3">
              <h4><%= user.fullname %></h4>
            </td>
            <td width="25%">Approved Hours <%= user.activities.where(:approved => true).sum(:hours_worked) %></td>
          </tr>
          <tr>
            <td width="25%"><h4>Description</h4></td>
            <td width="25%"><h4>Date</h4></td>
            <td width="25%"><h4>Hours worked</h4></td>
            <td width="25%"><h4>Edit</h4></td>
          </tr>
        <% user.activities.order('id DESC').each do |item| %>
          <tr>
            <td width="25%"><%= item.name %></td>
            <td width="25%"><%= item.date %></td>
            <td width="25%"><%= item.hours_worked %></td>
            <% if item.approved? %>
              <td width="25%">Approved / <%= link_to 'edit', edit_user_activity_path(user.id, item.id) %></td>
            <% else %>
              <td width="25%"><%= link_to 'Approve', edit_user_activity_path(user.id, item.id) %></td>
            <% end %>
          </tr>
        <% end %>
        </table>
      </div>
      <div class="row">
        <hr>
      </div>
      <% end %>
  <% end %>
</div>