<%= content_tag(:h2, @last_year) %>
<table width="100%" class="table table-striped table-bordered table-responsive">
  <tr>
    <td width="20%"><strong>Name</strong></td>
    <td width="20%"><strong>Activity Count</strong></td>
    <td width="20%"><strong>User ID</strong></td>
    <td width="20%"><strong>Approved Hours</strong></td>
    <td width="20%"><strong>Accrued Days</strong></td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.fullname %></td>
    <td><%= user.activities.by_year(@last_year).count %></td>
    <td><%= user.id %></td>
    <td><%= user.activities.by_year(@last_year).approved_hours %> hrs</td>
    <td><%= user.activities.by_year(@last_year).calc_accrued_days %></td>
  </tr>
  <% end %>
</table>