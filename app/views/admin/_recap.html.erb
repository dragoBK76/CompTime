<table width="100%" class="table table-striped table-bordered table-responsive">
  <tr>
    <td width="25%"><strong>Name</strong></td>
    <td width="25%">
      <strong>Activity Count</strong><br>
      <%= @this_year %><br> 
      <%= @this_year - 1 %>
    </td>
    <td width="10%"><strong>User ID</strong></td>
    <td width="40%">
      <strong>Approved Hours</strong><br>
      <%= @this_year %><br> 
      <%= @this_year - 1 %>
    </td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.fullname %></td>
    <td>
      <%= user.activities.by_year(@this_year).count %><br>
      <%= user.activities.by_year(@this_year - 1).count %>
    </td>
    <td><%= user.id %></td>
    <td>
      <%= @this_year %>: <%= user.activities.by_year(@this_year).approved_hours %> hours / <%= user.activities.by_year(@this_year).calc_accrued_days %> days<br>

      <%= @this_year - 1 %>: <%= user.activities.by_year(@this_year - 1).approved_hours %> hours / <%= user.activities.by_year(@this_year - 1).calc_accrued_days %>
    </td>
  </tr>
  <% end %>
</table>